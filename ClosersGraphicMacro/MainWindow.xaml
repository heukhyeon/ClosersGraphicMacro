<Window x:Class="ClosersGraphicMacro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClosersGraphicMacro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="572,10,0,0" VerticalAlignment="Top" Width="199" Height="41" Click="startButtonClick" />
        <ProgressBar HorizontalAlignment="Left" Height="41" Margin="10,10,0,0" VerticalAlignment="Top" Width="557"/>
        <TextBox x:Name="text_log" Text="Label" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Height="345" Width="772" BorderThickness="1" ClipToBounds="True" SnapsToDevicePixels="True" BorderBrush="Black">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="IsReadOnly" Value="True" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="TextWrapping" Value="Wrap" />
                </Style>
            </TextBox.Style>
        </TextBox>

    </Grid>
</Window>
